@page
@model LoginModel

@{
    Layout = "/Views/Shared/_Layout_Login.cshtml";
    ViewData["Title"] = "Login";
}



<div class="middle-box text-center loginscreen animate__animated animate__fadeIn mt-5">
        <div>
            <img class="img-fluid" src=@Url.Content("~/images/logo/logo-previa-safe.png") />
        </div>
        <h3 class="m-t">Bem-Vindo à Prévia Safe</h3>

        <form class="m-t" id="account" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" placeholder="Palavra-Passe" />
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Entrar</button>

            <a id="forgot-password" asp-page="./ForgotPassword"><small>Esqueceu a sua palavra-passe?</small></a>
            <p class="text-muted text-center"><small>Ainda não tem conta?</small></p>
            <a class="btn btn-sm btn-white btn-block" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registar</a>

        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
