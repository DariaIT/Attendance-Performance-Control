@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<div class="row">
    <div>
        <a class="icone pt-3 pl-3" title="Voltar" asp-action="Index" asp-controller="Home">
            <i class="fa fa-2x fa-arrow-circle-left"></i>
        </a>
    </div>
    <div class="col-md-4 offset-md-4 p-5 mt-5">
        <h1 class="text-center text-danger">Erro</h1>
        <h2 class="text-center text-danger">Algo correu errado, por favor, tente novamente ou contacte Administrador do Sistema.</h2>

        <div class="pt-3 text-center">
            <a class="btn btn-primary" title="Voltar" asp-action="Index" asp-controller="Home">
                Voltar
            </a>
        </div>
    </div>
</div>









