@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Utilizadores";
}




<table id="UsersTable" class="table table-striped table-bordered dt-responsive table-hover" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                Primeiro Nome
            </th>
            <th>
                Segundo Nome
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Nº Telemóvel
            </th>
            <th>
                Cargo
            </th>
            <th>
                Confirmado
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Occupation)
                </td>
                <td>
                    @{
                        if (item.EmailConfirmed == true)
                        {
                            @Html.Raw("Confirmado")
                        }
                        else
                        {
                            <form method="post">
                                <button type="submit" class="btn btn-primary" asp-action="Confirm" asp-route-Id="@item.Id" asp-route-confirm="0">Confirmar</button>
                            </form>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
