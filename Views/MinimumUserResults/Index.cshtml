@model IEnumerable<Attendance_Performance_Control.Models.MinimumUserResults>

@{
    ViewData["Title"] = "Definir Resultados Mínimos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            @TempData["Success"]
        </div>
    }
}

<div class="row">
    <div class="col-md-2 pt-3">
    </div>
    <div class="col-md-8">
        <h2 class="text-center">Definir Resultados Mínimos</h2>
        <table id="UserMinimosTable" class="table table-striped table-bordered dt-responsive table-hover animate__animated animate__fadeIn" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MinimumAuditorias)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MinimumConsultas)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MinimumRelatorios)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MinimumAuditorias)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MinimumConsultas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MinimumRelatorios)
                        </td>
                        <td>
                            <a class="icone pl-2" title="Editar" asp-action="Edit" asp-route-id="@item.Id">
                                <i style="font-size:16px" class="fa fa-cog"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-2"></div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {

            //sorting date of column 1
            //extention of moment.js for DataTable
            $.fn.dataTable.moment('DD/MM/YYYY');

            $('#UserMinimosTable').DataTable({
                "order": [[0, "asc"]],
                "columnDefs": [{
                    "targets": 4,
                    "orderable": false
                }],
                "language": {
                    "lengthMenu": "Mostrar _MENU_ Registros",
                    "search": "Procurar",
                    "paginate": { "previous": "Anterior", "next": "Próximo" },
                    "zeroRecords": "Nada foi encontrado",
                    "info": "Página _PAGE_ de _PAGES_",
                    "infoEmpty": "Sem registros",
                    "infoFiltered": "(filtrado de _MAX_ regitros totais)"
                }
            });

        });

    </script>

}