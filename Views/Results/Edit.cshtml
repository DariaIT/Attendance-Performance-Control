@model Attendance_Performance_Control.Models.EditResultRegistrationViewModel

@{
    ViewData["Title"] = "Editar Resultado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div>
        <a class="icone pt-3 pl-3" title="Voltar" asp-action="Index">
            <i class="fa fa-2x fa-arrow-circle-left"></i>
        </a>
    </div>
    <div class="col-md-4 offset-md-4 p-2">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <hr />
        <form asp-action="Edit">
            @if (Html.ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div asp-validation-summary="All"></div>
                </div>
            }

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResultTypeId" class="control-label"></label>
                <select asp-for="ResultTypeId" class="form-control" asp-items="ViewBag.ResultTypeId"></select>
                <span asp-validation-for="ResultTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
